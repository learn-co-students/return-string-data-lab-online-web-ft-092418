<%= form_for @product, url: {action: "create"} do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :price %>
  <%= f.number_field :price %> <br>
  <%= f.label :description %>: <br>
  <%= f.text_area :description, size: "60x12" %> <br>
  <%= f.label :inventory %>
  <%= f.number_field :inventory %> <br>

  <%= f.submit "Create" %>
<% end %>